              DragLeave="season_OnDragLeave" 
              DragOver="season_OnDragOver" 
              Drop="season_OnDrop"
              AllowDrop="True"
              Tag="Onchan Min">
            <Path.RenderTransform>
                <TranslateTransform X="-2.5" Y="-5.5"/>
            </Path.RenderTransform>
